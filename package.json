{
  "name": "keyboardist",
  "version": "1.0.5",
  "description": "simple global keyboard manager",
  "main": "lib/keyboardist.js",
  "scripts": {
    "test": "jest",
    "prettier": "prettier --trailing-comma es5 --single-quote --write",
    "dev":
      "webpack-dev-server --mode development --config dev/webpack.config.js",
    "build:docs": "webpack --mode production --config dev/webpack.config.js",
    "format": "yarn run prettier './src/*.js*'",
    "build:commonjs":
      "cross-env NODE_ENV=cjs rollup -c dev/rollup.config.js -o lib/keyboardist.js",
    "build:es":
      "cross-env BABEL_ENV=es NODE_ENV=es rollup -c dev/rollup.config.js -o es/keyboardist.js",
    "build:umd":
      "cross-env BABEL_ENV=es NODE_ENV=development rollup -c dev/rollup.config.js -o dist/keyboardist.js",
    "build:umd:min":
      "cross-env BABEL_ENV=es NODE_ENV=production rollup -c dev/rollup.config.js -o dist/keyboardist.min.js",
    "build":
      "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min"
  },
  "keywords": ["keyboard", "shortcuts"],
  "author": "Armando Sosa <arm.sosa@gmail.com>",
  "homepage": "https://github.com/soska/keyboardist.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:soska/keyboardist.js.git"
  },
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "cross-env": "^5.1.5",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^4.3.0",
    "jest": "^23.1.0",
    "prettier": "^1.8.2",
    "prismjs": "^1.14.0",
    "rollup": "^0.52.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^3.0.0",
    "style-loader": "^0.21.0",
    "webpack": "^4.10.2",
    "webpack-cli": "^2.1.5",
    "webpack-dev-server": "^3.1.4"
  }
}
